{
    "compilerOptions": {
        "target": "es5",
        "baseUrl": ".",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
